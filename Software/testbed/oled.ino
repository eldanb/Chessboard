{
  oled_write_strip_pm(7, 78, 93, on ? rds_indicator_strip : NULL);  
}

void oled_set_stereo_indicator(int on)
{
  oled_write_strip_pm(7, 96, 107, on ? stereo_indicator_strip : NULL);  
}

void oled_print(int start_col_, int start_page_, const char *txt_, int max_len_)
{
  if(start_col_ == -1)
  {
    int len = strlen(txt_);
    len = len > max_len_ ? max_len_ : len;
    start_col_ = 64-(len*9)/2;
  }

  for(int i=0; i<2; i++)
  {
    const char *txtptr = txt_;
    int max_len = max_len_; 
    
    oled_set_page_and_start_col(start_page_-i, start_col_);
    
    while(*txtptr && max_len)
    {
      Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
      Wire.write(0x40);
      for(int j=0; j<8; j++)
      {
        Wire.write(pgm_read_byte_near(full_terminal_font[*txtptr-32][i]+j));
      }
      Wire.write(0);
      Wire.endTransmission();    

      txtptr++;
      max_len--;
    }
  }  
}

