#define SSD1306_SETCONTRAST 0x81
#define SSD1306_SETREVERSECOM 0xC0
#define SSD1306_SETSEGREMAP 0xA1
#define SSD1306_SETDISPLAYCLOCKDIV 0xD5
#define SSD1306_SETMULTIPLEX 0xA8
#define SSD1306_CHARGEPUMP 0x8D
#define SSD1306_SETCOMPINS 0xDA
#define SSD1306_SETPRECHARGE 0xD9
#define SSD1306_SETVCOMDETECT 0xDB
#define SSD1306_SETADDESSING_MODE 0x20

#define SSD1306_DISPLAY_RAM_ON 0xA4
#define SSD1306_DISPLAY_RAM_OFF 0xA5
#define SSD1306_DISPLAY_ON 0xAF
#define SSD1306_DISPLAY_OFF 0xAE

void oled_command(byte cmd_)
{
  Wire.setClock(3400000);
 Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
 Wire.write(0x00);
 Wire.write(cmd_);
 Wire.endTransmission();  
}

void oled_command_with_arg(byte cmd_, byte arg_)
{
 Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
 Wire.write(0x00);
 Wire.write(cmd_);
 Wire.write(arg_);
 Wire.endTransmission();  
}

void oled_setup()
{
  oled_command_with_arg(SSD1306_SETDISPLAYCLOCKDIV, 0x80);
  oled_command_with_arg(SSD1306_SETMULTIPLEX, 31);
  oled_command_with_arg(SSD1306_CHARGEPUMP, 0x14);
  oled_command_with_arg(SSD1306_SETCOMPINS, 0x02);
  oled_command_with_arg(SSD1306_SETPRECHARGE, 0xF1);
  oled_command_with_arg(SSD1306_SETVCOMDETECT, 0x40);  
  oled_command(SSD1306_SETREVERSECOM);   
  oled_command(SSD1306_SETSEGREMAP);     
  oled_command(SSD1306_DISPLAY_ON);  
  oled_command_with_arg(SSD1306_SETCONTRAST, 0x7F);  
}

void oled_all_on() {
  oled_command(0xa5);     
  
}
void oled_off()
{
  oled_command(SSD1306_DISPLAY_OFF);
}

void oled_set_page_and_start_col(int page_, int start_col_)
{
  oled_command_with_arg(SSD1306_SETADDESSING_MODE, 2);
  oled_command(start_col_&0xF);
  oled_command((start_col_>>4) | 0x10);
  oled_command(0xb0 + page_);
}


void oled_write_strip_pm(int page_, int start_col_, int end_col_, const char *buff_)
{
  oled_set_page_and_start_col(page_, start_col_);

  while(start_col_ <= end_col_)
  {
    int count = 0;
    Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
    Wire.write(0x40);
    while(start_col_ <= end_col_ && count < 16)
    {
      if(buff_)
      {
        Wire.write(pgm_read_byte_near(buff_));    
        buff_ ++;
      } else
      {
        Wire.write(0);
      }
      start_col_ ++;
      count ++;
    }
    Wire.endTransmission();      
  }  
}

void oled_set_reception_strip(int level)
{

  oled_set_page_and_start_col(7, 110);
  
  const char *strip = reception_strip;
  for(int i=0; i<level; i++)
  {
    Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
    Wire.write(0x40);
    Wire.write(pgm_read_byte_near(strip++));
    Wire.write(pgm_read_byte_near(strip++));
    Wire.write(pgm_read_byte_near(strip++));
    Wire.endTransmission(); 
  }
  
  for(int i=level; i<6; i++)
  {
    Wire.beginTransmission(DISPLAY_OLED_I2C_ADDRESS);
    Wire.write(0x40);
    Wire.write((pgm_read_byte_near(strip++)) & 1);
    Wire.write((pgm_read_byte_near(strip++)) & 1);
    Wire.write((pgm_read_byte_near(strip++)) & 1);
    Wire.endTransmission(); 
  }
}

